<project name="cxf-project-demo" default="war" basedir=".">

    <path id="compile.classpath">
        <fileset dir="web/WEB-INF/lib">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="init">
        <mkdir dir="build/classes"/>
        <mkdir dir="dist" />
    </target>

    <target name="compile" depends="init" >
        <javac destdir="build/classes" debug="true" srcdir="src">
            <classpath refid="compile.classpath"/>
        </javac>
    </target>

    <target name="copydeps" depends="compile" description="">
        <copy todir="build/classes">
            <fileset dir="src"
                     includes="**/*.xml,**/*.properties,**/*.txt,**/*.ico" />
        </copy>
    </target>

    <target name="war" depends="copydeps">
        <war destfile="dist/cxf-project-demo.war" webxml="web/WEB-INF/web.xml">
            <fileset dir="web"/>
            <lib dir="web/WEB-INF/lib"/>
            <classes dir="build/classes"/>
        </war>
    </target>

    <target name="clean">
        <delete dir="dist" />
        <delete dir="build" />
    </target>

</project>
